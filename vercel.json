{
  "framework": "remix",
  "buildCommand": "npx @remix-run/dev build",
  "devCommand": "npx @remix-run/dev",
  "installCommand": "npm install",
  "outputDirectory": "build",
  "public": true,
  "routes": [
    {
      "src": "/build/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ]
}
