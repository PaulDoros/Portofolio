{
  "framework": "remix",
  "buildCommand": "npx @remix-run/dev build",
  "devCommand": "npx @remix-run/dev",
  "installCommand": "npm install",
  "outputDirectory": "public",
  "git": {
    "deploymentEnabled": false
  },
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/(.*)",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ]
}
